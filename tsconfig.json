{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
          "@components": ["components"],
          "@components/*": ["components/*"],
          "@screens": ["screens"],
          "@screens/*": ["screens/*"],
          "@navigation": ["navigation"],
          "@navigation/*": ["navigation/*"],
          "@assets": ["assets"],
          "@assets/*": ["assets/*"],
          "@images": ["assets/images"],
          "@images/*": ["assets/images/*"],
          "@theme": ["theme"],
          "@theme/*": ["theme/*"],
          "@utils": ["utils"],
          "@utils/*": ["utils/*"],
          "@helpers": ["helpers"],
          "@helpers/*": ["helpers/*"],
          "@redux": ["redux"],
          "@redux/*": ["redux/*"],
        }, 
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react-native",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "allowImportingTsExtensions": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "sourceMap": true,
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "resolveJsonModule": true
      },
}